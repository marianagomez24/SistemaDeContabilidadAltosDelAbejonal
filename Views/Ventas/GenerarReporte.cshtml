@model IEnumerable<SistemaContabilidadAltosDelAbejonal.Models.Ventas>

<h2>Reporte de Ventas</h2>

                <form method="get" action="/Ventas/GenerarReporte">
                    <label for="fechaInicio">Fecha de Inicio:</label>
                    <input type="date" id="fechaInicio" name="fechaInicio" required />

                    <label for="fechaFin">Fecha de Fin:</label>
                    <input type="date" id="fechaFin" name="fechaFin" required />

                    <button type="submit">Generar Reporte</button>
                </form>

            
                @if (Model != null && Model.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID Venta</th>
                                <th>ID Cliente</th>
                                <th>ID Usuario</th>
                                <th>Fecha de Venta</th>
                                <th>Total Venta</th>
                                <th>Observaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var venta in Model)
                            {
                                <tr>
                                    <td>@venta.IDVenta</td>
                                    <td>@venta.IDCliente</td>
                                    <td>@venta.IDUsuario</td>
                                    <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                    <td>@venta.TotalVenta.ToString("C2")</td>
                                    <td>@venta.Observaciones</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h3>Total de Ventas: @ViewBag.TotalVentas.ToString("C2")</h3>

                }
                else
                {
                    <p>No se encontraron ventas en el rango de fechas especificado.</p>
                }
