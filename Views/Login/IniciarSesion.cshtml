@model SistemaContabilidadAltosDelAbejonal.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

@using (Html.BeginForm("IniciarSesion", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid authentication-bg overflow-hidden">
        <div class="bg-overlay"></div>
        <div class="row align-items-center justify-content-center min-vh-100">
            <div class="col-10 col-md-6 col-lg-4 col-xxl-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="text-center">
                            <a href="index.html" class="logo-Abejonal">
                                <img src="~/assets/images/AltosAbejonal.jpeg" alt="" height="50" class="auth-logo logo-dark mx-auto">
                            </a>
                            <a href="index.html" class="logo-Abejonal">
                                <img src="~/assets/images/AltosAbejonal.jpeg" alt="" height="50" class="auth-logo logo-light mx-auto">
                            </a>


                            <h4 class="mt-4">Bienvenido a Altos Del Abejonal !</h4>
                            <p class="text-muted">Ingrese sus datos para iniciar sesión</p>
                        </div>

                        <div class="p-2 mt-5">
                                <div class="input-group auth-form-group-custom mb-3">
                                    @Html.LabelFor(m => m.Correo, new { @class = "input-group-text bg-primary bg-opacity-10 fs-16" })
                                    @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", placeholder = "Correo electrónico" })
                                    @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                                </div>


                                <div class="input-group auth-form-group-custom mb-3">
                                    @Html.LabelFor(m => m.Contraseña, new { @class = "input-group-text bg-primary bg-opacity-10 fs-16" })
                                    @Html.PasswordFor(m => m.Contraseña, new { @class = "form-control" ,placeholder = "Contraseña" })
                                    @Html.ValidationMessageFor(m => m.Contraseña)
                                </div>

                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <div class="mb-sm-5">
                                    <div class="form-check float-sm-start">
                                        <input type="checkbox" class="form-check-input" id="customControlInline">
                                        <label class="form-check-label" for="customControlInline">Recordar Credenciales</label>
                                    </div>
                                    <div class="float-sm-end">
                                        <a href="auth-recoverpw.html" class="text-muted"><i class="mdi mdi-lock me-1"></i> Olvidó su contraseña?</a>
                                    </div>
                                </div>

                                <div class="pt-3 text-center">
                                    <button class="btn btn-primary w-xl waves-effect waves-light" type="submit">Iniciar Sesión</button>
                                </div>

                                <div class="mt-3 text-center">
                                    <p class="mb-0">No tiene una cuenta ? <a href="auth-register.html" class="fw-medium text-primary"> Registrarse </a> </p>
                                </div>
                        </div>

                        <div class="mt-5 text-center">
                            <p>
                                ©
                                <script>document.write(new Date().getFullYear())</script> Altos Del Abejonal. 
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



