@model IEnumerable<SistemaContabilidadAltosDelAbejonal.Models.Factura>
@{
    ViewBag.Title = "Facturas";
}

<!-- Start right Content here -->
<!-- ============================================================== -->
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Facturas</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Facturas</a></li>
                                <li class="breadcrumb-item active">Información de Facturas</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Sección de Productos</h4>
                        </div>
                        <div class="card-body">
                            <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                <table id="datatable" class="table table-hover table-bordered table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>No.Factura</th>
                                            <th>Tipo de Factura</th>
                                            <th>Fecha de Ingreso al sistema</th>
                                            <th>Fecha de Emisión</th>
                                            <th>Fecha de Pago</th>
                                            <th>Total</th>
                                            <th>Acción</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var factura in Model)
                                        {
                                            <tr>
                                                <td>@factura.IdFactura</td>
                                                <td>@factura.TipoFactura</td>
                                                <td>@factura.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                                <td>@factura.FechaEmision.ToString("dd/MM/yyyy")</td>
                                                <td>@factura.FechaPago.ToString("dd/MM/yyyy")</td>
                                                <td>@factura.Total</td>
                                                <td>
                                                    <button class="btn btn-info" onclick="location.href='EditarFactura.html'">Editar Factura</button>
                                                    <button class="btn btn-danger" onclick="location.href='EliminarFactura.html'">Eliminar</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- container-fluid -->
            <div style="text-align: center;">
                <button class="btn btn-primary" onclick="location.href='AgregarFactura.html'">Agregar Factura</button>
            </div>
        </div>
        <!-- End Page-content -->

