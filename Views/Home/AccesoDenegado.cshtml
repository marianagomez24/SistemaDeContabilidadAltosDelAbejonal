@{
    Layout = null;
    ViewBag.Title = "Acceso Denegado";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Altos del Abejonal</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/AltosAbejonal.jpeg">
    @Styles.Render("~/Content/css")
</head>

<body>
        <div class="">
            <div class="bg-overlay"></div>
            <div class="row align-items-center justify-content-center min-vh-100">
                <div class="col-10 col-md-6 col-lg-4 col-xxl-3">
                    <div class="card mb-0">
                        <div class="card border">
                            <div class="card-header card-header-bordered">
                                <h3 class="card-title">Acceso Denegado</h3>
                            </div>
                            <div class="card-body">
                                <div class="text-center">
                                    <img src="~/assets/images/AltosAbejonal.jpeg" alt="" height="50" class="auth-logo logo-dark mx-auto">
                                    <h4 class="mt-4">No tiene permiso para acceder a esta página</h4>
                                    <p class="text-muted">Intente iniciar sesión con otra cuenta</p>
                                </div>                            
                                <div class="hstack gap-2">
                                    <a href="/Home/Index" class="grid-nav-item">
                                        <button class="btn btn-label-primary">Volver al Inicio</button>
                                    </a>
                                    <a href="/Login/IniciarSesion" class="grid-nav-item">
                                        <button class="btn btn-label-info">Iniciar Sesión</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/js")
</body>
</html>