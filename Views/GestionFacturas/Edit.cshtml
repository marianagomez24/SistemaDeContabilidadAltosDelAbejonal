@model SistemaContabilidadAltosDelAbejonal.Models.Factura

@{
    ViewBag.Title = "Edit";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Información de la Factura</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Gestión de Facturas</a></li>
                            <li class="breadcrumb-item active">Editar Factura</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Datos de la Factura</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "GestionFacturas", FormMethod.Post, new { @class = "custom-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IdFacturas)

                    <div class="mb-3">
                        @Html.LabelFor(model => model.TipoFactura, "Tipo de Factura", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form-floating">
                            @Html.EditorFor(model => model.TipoFactura, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TipoFactura, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaIngreso, "Fecha de Ingreso", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form-floating">
                            @Html.TextBoxFor(m => m.FechaIngreso, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "Fecha de ingreso", required = "required", type = "date" })
                            @Html.ValidationMessageFor(model => model.FechaIngreso, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaEmision, "Fecha de Emisión", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form-floating">
                            @Html.TextBoxFor(m => m.FechaEmision, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "Fecha de emision", required = "required", type = "date" })
                            @Html.ValidationMessageFor(model => model.FechaEmision, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaPago, "Fecha de Pago", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form-floating">
                            @Html.TextBoxFor(m => m.FechaPago, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "Fecha de pago", required = "required", type = "date" })
                            @Html.ValidationMessageFor(model => model.FechaPago, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <span>₡</span>
                        @Html.LabelFor(model => model.Total, "Total", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="form-floating">
                            @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                        </div>
                    </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a href="@Url.Action("Facturas")" class="btn btn-secondary">Regresar</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
